<!DOCTYPE html>
<html>

<head>
  <title>SyntaxEdutek</title>
  <link rel='stylesheet' href='/stylesheet/style.css'>
  </link>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
  <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
  <script>
    const RoomID = " <%= roomID %>";
    const UserName = " <%= UserName %>"
  </script>
</head>

<body onload="UserMediaStream()">

  <div class="main">
    <div class="main_left">
      <div class="main_videos">
        <div id="video-grid">
          <div class="avatar">
            <i class="fas fa-user-alt-slash"></i>
          </div>
        </div>
      </div>

      <div class="main_controls">

        <div class="main_controls_block">
          <div onclick="muteUnmute()" class="main_controls_button main_mute_button">
            <i class="fas fa-microphone"></i>
            <span>Mute</span>
          </div>

          <div onclick="stopPlay()" class="main_controls_button main_video_button">
            <i class="fas fa-video"></i>
            <span>Stop Video</span>
          </div>
        </div>

        <div class="main_controls_block">
          <div onclick="SwitchScreen()" class="main_controls_button">
            <i class="fas fa-desktop"></i>
            <span id="screenSharing">Share Screen</span>
          </div>

          <div onclick="showParticipants()" class="main_controls_button">
            <i class="fas fa-user-friends"></i>
            <span>Participants</span>
          </div>

          <div onclick="showChatWindow()" class="main_controls_button">
            <i class="fas fa-comment-alt"></i>
            <span>Chat</span>
          </div>
        </div>

        <div class="main_controls_block">
          <div onclick="disconnectToUser()" class="main_controls_button">
            <i class="fas fa-sign-out-alt"></i>
            <span class="leave_meeting">Leave Meeting</span>
          </div>
        </div>

      </div>

    </div>

    <div class="main_right">
      <div class="main_header">
        <h3 class="header">Chats</h3>
      </div>

      <div class="main_chat_window">
        <ul class="messages">

        </ul>
        <ul class="participants">

        </ul>
      </div>

      <div class="main_message_container">
        <input type="text" id="chat-message" placeholder="Type message here...">
        <input type="file" id="file-upload">
        <label for="file-upload" class="file-upload-label"><i class="fas fa-paperclip"></i></label>
      </div>

    </div>
  </div>

  <script src="/javascript/script.js"></script>
</body>

</html>